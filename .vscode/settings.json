{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,

    // 隐藏miniprogram目录下的js和wxss文件
    "miniprogram/**/*.js": { "when": "$(basename).ts" },
    "miniprogram/**/*.js.map": { "when": "$(basename)" },
    "miniprogram/**/*.wxss": { "when": "$(basename).scss" }
  },

  "json.schemas": [
    {
      "fileMatch": ["/miniprogram/pages/**/index.json"],
      "url": "/.vscode/miniapp-schema.json"
    }
  ],

  // 文件关联
  "files.associations": {
    "*.json": "jsonc",
    "*.wxml": "wxml",
    "*.wxs": "javascript"
  },

  "cSpell.words": ["bindtap", "miniapp", "preload", "projectname", "regx", "wxml", "wxss"]
}
