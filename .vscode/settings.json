{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,

    // 隐藏miniprogram目录下的js和wxss文件
    "miniprogram/**/*.js": { "when": "$(basename).ts" },
    "miniprogram/**/*.wxss": { "when": "$(basename).scss" }
  },

  "files.associations": {
    "*.json": "jsonc"
  }
}
